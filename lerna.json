{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": ["master"],
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "yes": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "yes": true,
      "message": "chore(release): publish [skip ci]"
    }
  },
  "version": "independent"
}
